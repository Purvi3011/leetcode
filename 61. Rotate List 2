class Solution {
    public ListNode rotateRight(ListNode head, int k) {
        if(head == null || k == 0){
            return head;
        }
        int l = 0;
        
        ListNode tail = head;
        while(tail.next != null){
            l++;
            tail = tail.next;
        }
        l++;
        tail.next = head;
        int rotate = l-k%l;
        tail = head;
        while(rotate-- > 1){
            tail = tail.next;
        }
        head = tail.next;
        tail.next = null;
        return head;
    }
}    
